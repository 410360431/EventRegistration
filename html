    // æŸ¥çœ‹ä»‹ç´¹æŒ‰éˆ•äº‹ä»¶
    document.getElementById("showIntroBtn").addEventListener("click", function() {
      const select = document.getElementById("activity");
      const introDiv = document.getElementById("activityIntro");
      const value = select.value;
      introDiv.textContent = activityDescriptions[value] || "ç„¡æ­¤æ´»å‹•ä»‹ç´¹";
      introDiv.classList.add("active");
    });

    // åˆ‡æ›æ´»å‹•æ™‚è‡ªå‹•éš±è—ä»‹ç´¹
    document.getElementById("activity").addEventListener("change", function() {
      document.getElementById("activityIntro").classList.remove("active");
      document.getElementById("activityIntro").textContent = "";
    });

    // å ±åè¡¨å–®é€å‡º
    document.getElementById("registerForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      const messageDiv = document.getElementById("message");
      const btn = document.getElementById("registerBtn");
      const activityId = document.getElementById("activity").value.trim();
      const name = document.getElementById("name").value.trim();
      const department = document.getElementById("department").value.trim();
      const studentId = document.getElementById("studentId").value.trim();
      const email = document.getElementById("email").value.trim();
      const gender = document.querySelector('input[name="gender"]:checked')?.value;

      // åŸºæœ¬é©—è­‰
      if (!name || !department || !studentId || !email || !gender) {
        messageDiv.textContent = "âŒ è«‹å®Œæ•´å¡«å¯«æ‰€æœ‰æ¬„ä½";
        messageDiv.className = "error";
        return;
      }
      if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        messageDiv.textContent = "âŒ è«‹è¼¸å…¥æ­£ç¢ºçš„ Email";
        messageDiv.className = "error";
        return;
      }

      messageDiv.textContent = "å ±åä¸­...";
      messageDiv.className = "";
      btn.disabled = true;

      // è‹¥æ²’æœ‰å¾Œç«¯ï¼Œè«‹ç”¨ä¸‹æ–¹ setTimeout æ¨¡æ“¬
      /*
      setTimeout(() => {
        messageDiv.textContent = "ğŸ‰ å ±åæˆåŠŸï¼è«‹è‡³ä¿¡ç®±æŸ¥æ”¶é€šçŸ¥ã€‚";
        messageDiv.className = "success";
        document.getElementById("registerForm").reset();
        btn.disabled = false;
      }, 1000);
      return;
      */

      try {
        const response = await fetch(`/api/activities/${activityId}/register`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ name, department, studentId, gender, email })
        });

        const result = await response.json();

        if (!response.ok) {
          throw new Error(result.message || "å ±åå¤±æ•—");
        }

        messageDiv.textContent = "ğŸ‰ å ±åæˆåŠŸï¼è«‹è‡³ä¿¡ç®±æŸ¥æ”¶é€šçŸ¥ã€‚";
        messageDiv.className = "success";
        document.getElementById("registerForm").reset();
      } catch (error) {
        messageDiv.textContent = `âŒ ${error.message}`;
        messageDiv.className = "error";
      } finally {
        btn.disabled = false;
      }
    });
